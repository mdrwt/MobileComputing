<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.iiitd.mt14033.passwordmanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListPasswordActivity" />
        <activity android:name=".EditPasswordActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".AdvancedSetttingsActivity" />
        <activity android:name=".AboutAppActivity" />
        <activity android:name=".AddLoginActivity"/>
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".LoginActivity"
            android:label="Create Account" />
        <activity
            android:name=".MatchingLoginsDialogActivity"
            android:excludeFromRecents="true"
            android:label="@string/dialog_matching_title"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@style/Theme.AppCompat.Dialog" />

        <service
            android:name=".service.MyAccessibilityService"
            android:enabled="true"
            android:exported="true"
            android:label="Password Hint"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity
            android:name=".MatchingLoginsActivity"
            android:noHistory="true"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/Theme.AppCompat.Translucent">
        </activity>
    </application>

</manifest>